    "@fastify/swagger-ui": "^5.0.1",
    "@fastify/type-provider-json-schema-to-ts": "^4.0.0",
    "ajv-errors": "^3.0.0",
    "awilix": "^11.0.0",
    "awilix-manager": "^5.5.0",
    "chalk": "4.1.2",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.8.4",
    "nodemon": "^3.1.5",
    "pg": "^8.4.0",
    "typeorm": "0.3.20",
    "uuid": "^11.0.3",
    "winston": "^3.14.2",
